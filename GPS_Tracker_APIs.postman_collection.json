{
  "info": {
    "name": "GPS Tracker API Collection",
    "description": "Complete API testing collection for GT06 GPS Tracker",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "System APIs",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Documentation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api",
              "host": ["{{baseUrl}}"],
              "path": ["api"]
            }
          }
        },
        {
          "name": "GPS Debug Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/gps/debug",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gps", "debug"]
            }
          }
        }
      ]
    },
    {
      "name": "Device Management",
      "item": [
        {
          "name": "Get All Devices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/devices",
              "host": ["{{baseUrl}}"],
              "path": ["api", "devices"]
            }
          }
        },
        {
          "name": "Add Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"123456789012345\",\n  \"imei\": \"123456789012345\",\n  \"vehicleName\": \"Test Vehicle\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/devices",
              "host": ["{{baseUrl}}"],
              "path": ["api", "devices"]
            }
          }
        },
        {
          "name": "Delete Device",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/devices/{{deviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "devices", "{{deviceId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Location APIs",
      "item": [
        {
          "name": "Get Live Locations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/locations/live",
              "host": ["{{baseUrl}}"],
              "path": ["api", "locations", "live"]
            }
          }
        },
        {
          "name": "Get Device Location",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/locations/live/{{deviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "locations", "live", "{{deviceId}}"]
            }
          }
        },
        {
          "name": "Get Location History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/locations/history/{{deviceId}}?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "locations", "history", "{{deviceId}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "from",
                  "value": "2024-01-01",
                  "disabled": true
                },
                {
                  "key": "to",
                  "value": "2024-12-31",
                  "disabled": true
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Command APIs",
      "item": [
        {
          "name": "Engine Stop",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"engineStop\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/commands/{{deviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "commands", "{{deviceId}}"]
            }
          }
        },
        {
          "name": "Engine Resume",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"engineResume\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/commands/{{deviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "commands", "{{deviceId}}"]
            }
          }
        },
        {
          "name": "Custom Command",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"custom\",\n  \"data\": \"STATUS,123456#\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/commands/{{deviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "commands", "{{deviceId}}"]
            }
          }
        },
        {
          "name": "Get Device Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/commands/{{deviceId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "commands", "{{deviceId}}", "status"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "deviceId",
      "value": "123456789012345"
    }
  ]
}